	quantidade = y - 1;
	enquanto(quantidade>=0)faca
		n = comparaTexto(maiusculo(primeiro[quantidade]),maiusculo(segundo[quantidade]));
		se(n != 0)entao
			quantidade = 0;
			aaa = 0;
		senao
			aaa = 1;
		fimSe
		quantidade = quantidade-1;
	fimEnquanto
	
	retorna aaa;
